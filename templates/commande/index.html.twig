{% block title %}{% endblock %}

{% block body %}
    <h1 style="margin-right: 40%">Commandes</h1>

    <table class="form_table2bis">
        <thead>
        <tr>
            <th>Id</th>
            <th>Panier</th>
            <th>Client</th>
            <th>Article</th>
            <th>Type</th>
            <th>Prix</th>
            <th>Action</th>
            <th>Couleur</th>
            <th>Quantit√©</th>
        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            {% if commande.live.id == id %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.panier }}</td>
                    {% if commande.client != null %}
                        <td>{{ commande.client.nickname }}</td>
                    {% else %}
                        <td>INCONNU</td>
                    {% endif %}
                    <td>{{ commande.article }}</td>
                    {% for article in articles %}
                        {% if article.id == commande.article %}
                            <td>{{ article.type }}</td>
                            <td>{{ article.prixVente }}</td>
                            <td>
                                <form method="post" action="{{ path('commande_delete', {'id': commande.id}) }}"
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                    <button class="btnR2">Delete</button>
                                </form>
                            </td>
                        {% endif %}
                    {% endfor %}
                    <td>{{ commande.color }}</td>
                    <td>{{ commande.quantite }}</td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>

{% endblock %}
